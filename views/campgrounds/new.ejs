<% layout('layouts/boilerplate') %>   

<div class="row">
    <h1 class="text-center">
        New Campground
    </h1>
    <div class="col-6 offset-3">

<!-- the form -->
        <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">

            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" name="campground[title]" id="title" required>
                <div class="valid-feedback">
                    Valid Entry
                </div>
            </div>
    
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" name="campground[location]" id="location" required>
                <div class="valid-feedback">
                    Valid Entry
                </div>
            </div>

            <div class="mb-3">
            <label class="form-label" for="price">Price</label>
            <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text" id="price-label">$</span>
                </div>
                <input type="text" name="campground[price]" class="form-control" id="price" placeholder="0" aria-label="price" aria-describedby="price-label" required>
                <div class="input-group-append">
                  <span class="input-group-text">.00</span>
                  <div class="valid-feedback">
                      Valid Entry
                  </div>
                </div>
              </div>
            </div>

            <div class="mb-3">
                <div class="form-file custom-file">
                    <input type="file" class="form-control" id="image" name="image" multiple required name="image">
                    <div class="invalid-feedback">
                        This campground would look much better with a picture.
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" name="campground[description]" id="location" required></textarea>
            </div>

            <div class="mb-3">
                <button class="btn btn-success">Add Campground</button>
            </div>
            

        </form>
    
            <a href="/campgrounds">Back to All Campgrounds</a>
<!-- the form -->

    </div>
</div>











